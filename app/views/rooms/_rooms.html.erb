<h3 class="text-muted mb-0">
  Salas
</h3>

<hr class="mt-1">

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
      Não há salas
  </div>
<% end %>

<div class="mt-3">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    Criar sala
  <% end %>
</div>
